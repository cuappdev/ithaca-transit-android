<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_text"
        android:layout_width="240dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/place_name"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif"
                android:text=""
                android:textColor="@color/textBlack"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="49dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/green"
                android:textSize="12sp" android:textStyle="bold"/>

            <ImageView
                android:id="@+id/on_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignTop="@+id/text_board"
                android:layout_alignEnd="@id/text_board" android:layout_marginTop="4dp"
                android:layout_marginEnd="-13dp" android:src="@drawable/ontime"
                android:visibility="invisible"/>


            <TextView
                android:id="@+id/text_departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_board"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@+id/text_late_departure"
                android:fontFamily="sans-serif"
                android:textColor="@color/textBlack"
                android:textSize="12sp" android:textStyle="normal"/>

            <TextView
                android:id="@+id/text_late_departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_board"
                android:layout_marginLeft="12dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:textStyle="normal"/>
            <ImageView
                android:src="@drawable/ic_next"
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_toRightOf="@id/place_name"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/next"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp">

                <include layout="@layout/bus_number"></include>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
