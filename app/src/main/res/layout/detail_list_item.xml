<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:30 pm"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/dots"
        android:layout_width="24dp"
        android:layout_height="22dp" android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/time" android:src="@drawable/busstop"/>

    <ImageView
        android:id="@+id/dots3"
        android:layout_width="7dp"
        android:layout_height="13dp" android:layout_alignParentTop="true"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="39dp" android:layout_toRightOf="@id/time"
        android:src="@drawable/walkstart"/>
    <ImageView
        android:id="@+id/dots4"
        android:layout_width="7dp"
        android:layout_height="13dp" android:layout_alignParentTop="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="39dp" android:layout_toRightOf="@id/time"
        android:src="@drawable/arrow"/>
    <ImageView
        android:id="@+id/dots2"
        android:layout_width="22dp"
        android:layout_height="58dp" android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="22dp" android:layout_toRightOf="@id/time"
        android:src="@drawable/detail_line"/>
    <TextView
        android:id="@+id/direction_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="0dp" android:layout_toRightOf="@id/dots" android:text="Board"
        android:textColor="@color/black" android:textSize="14sp"/>


    <LinearLayout
        android:id="@+id/bus_container"
        android:layout_width="48dp"
        android:layout_height="23dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/direction_type" android:background="@drawable/bus_background">
        <ImageView
            android:id="@+id/ic_bus"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignBottom="@+id/bus_container" android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_bus_marker">
        </ImageView>

        <TextView
            android:id="@+id/tv_bus_number_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bus_container"
            android:layout_toEndOf="@+id/bus_container"
            android:text="72" android:textColor="@color/white"
            android:textSize="13sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/direction_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp" android:layout_toRightOf="@id/bus_container"
        android:text="at RPCC"
        android:textColor="@color/black" android:textSize="14sp"
        tools:ignore="NotSibling"/>

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/direction_type"
        android:layout_alignStart="@+id/direction_type"
        android:layout_marginStart="0dp" android:layout_marginTop="6dp"
        android:text="20 ft" android:textColor="@color/gray" android:textSize="10sp"/>

    <TextView
        android:id="@+id/distance2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/direction_type"
        android:layout_alignStart="@+id/direction_type"
        android:layout_marginStart="-1dp" android:layout_marginTop="19dp"
        android:text="3 stops" android:textColor="@color/gray"
        android:textSize="10sp"/>
    <TextView
        android:id="@+id/distance3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/direction_type"
        android:layout_alignStart="@+id/direction_type"
        android:layout_marginStart="53dp" android:layout_marginTop="19dp"
        android:text="11 min" android:textColor="@color/gray"
        android:textSize="10sp"/>
    <View
        android:id="@+id/bottom_divider"
        android:layout_width="259dp"
        android:layout_height="2dp"
        android:layout_alignParentStart="true" android:layout_alignParentBottom="true"
        android:layout_marginStart="101dp" android:layout_marginBottom="11dp"
        android:background="@color/gray"/>
    <View
        android:id="@+id/stops_divider"
        android:layout_width="160dp"
        android:layout_height="3dp"
        android:layout_alignParentStart="true" android:layout_alignParentBottom="true"
        android:layout_marginStart="200dp" android:layout_marginBottom="33dp"
        android:background="@color/gray"/>
</RelativeLayout>