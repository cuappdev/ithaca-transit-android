<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="#fafafa">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/bus_stop_dot"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentTop="true" android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/time" android:src="@drawable/busstop"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/walk_end_dot"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:layout_alignParentTop="true" android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/time" android:src="@drawable/destination"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/walk_start_dot"
        android:layout_width="24dp"
        android:layout_height="22dp" android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp" android:layout_toRightOf="@id/time"
        android:src="@drawable/walkstart" android:visibility="invisible"/>
    <!--<ImageView-->
        <!--android:id="@+id/dot_partition"-->
        <!--android:layout_width="7dp"-->
        <!--android:layout_height="13dp"-->
        <!--android:layout_alignParentTop="true" android:layout_marginLeft="91dp"-->
        <!--android:layout_marginTop="39dp"-->
        <!--android:layout_toRightOf="@id/time" android:src="@drawable/walkstart"-->
        <!--android:visibility="invisible"/>-->
    <ImageView
        android:id="@+id/walk_path_1"
        android:layout_width="7dp"
        android:layout_height="13dp"
        android:layout_alignParentTop="true" android:layout_marginLeft="19dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/time" android:src="@drawable/walkstart"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/walk_path_2"
        android:layout_width="7dp"
        android:layout_height="13dp"
        android:layout_alignParentTop="true" android:layout_marginLeft="18dp"
        android:layout_marginTop="42dp"
        android:layout_toRightOf="@id/time" android:src="@drawable/walkstart"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/walk_path_3"
        android:layout_width="7dp"
        android:layout_height="13dp"
        android:layout_alignParentTop="true" android:layout_marginLeft="18dp"
        android:layout_marginTop="58dp"
        android:layout_toRightOf="@id/time" android:src="@drawable/walkstart"
        android:visibility="invisible"/>
    <!--<ImageView-->
        <!--android:id="@+id/drop_down_arrow"-->
        <!--android:layout_width="13dp"-->
        <!--android:layout_height="13dp" android:layout_alignParentTop="true"-->
        <!--android:layout_marginLeft="147dp"-->
        <!--android:layout_marginTop="39dp" android:layout_toRightOf="@id/time"-->
        <!--android:src="@drawable/arrow" android:visibility="invisible"/>-->
    <ImageView
        android:id="@+id/bus_stop_path"
        android:layout_width="22dp"
        android:layout_height="58dp" android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="22dp" android:layout_toRightOf="@id/time"
        android:src="@drawable/detail_line" android:visibility="invisible"/>
    <TextView
        android:id="@+id/direction_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="0dp" android:layout_toRightOf="@id/bus_stop_dot"
        android:textColor="@color/black" android:textSize="14sp"/>

    <LinearLayout
        android:id="@+id/bus_container"
        android:layout_width="28dp"
        android:layout_height="13dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/bus_stop_dot"
        android:background="@drawable/bus_background"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/ic_bus"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/ic_bus_marker">
        </ImageView>

        <TextView
            android:id="@+id/tv_bus_number_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bus_container"
            android:layout_toEndOf="@+id/bus_container"
            android:text="##"
            android:textColor="@color/white"
            android:textSize="9sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/direction_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:ignore="NotSibling"/>

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/direction_type"
        android:layout_alignStart="@+id/direction_type"
        android:layout_marginStart="0dp"
        android:textColor="@color/gray"
        android:textSize="10sp"/>

    <RelativeLayout
        android:id="@+id/clickable_info"
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_below="@id/direction_type"
        android:layout_alignStart="@+id/direction_type"
        android:layout_marginTop="8dp">
    </RelativeLayout>
