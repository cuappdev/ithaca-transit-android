<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="11dp"
    android:paddingBottom="11dp"
    android:background="#fafafa">
    <ImageView
        android:layout_width="33dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true" android:layout_alignParentTop="true"
        android:layout_marginStart="59dp" android:src="@drawable/detail_stop"/>

    <ImageView
        android:layout_width="17dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true" android:layout_alignParentTop="true"
        android:layout_marginStart="68dp" android:layout_marginTop="35dp"
        android:src="@drawable/detail_line"/>

    <TextView
        android:id="@+id/stop_name"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="128dp" android:layout_marginTop="30dp"
        android:text="Baker" android:textColor="@color/gray" android:textSize="20sp"/>
</RelativeLayout>